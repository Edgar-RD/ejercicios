def leer_frase():
    global txt
    txt=(input("ingrese un afrase: ")). lower()
def contar_vocales():
    vocal=["a","e","i","o","u","A","E","I","O","U"]
    cont=0
    for i in vocal:
        for j in txt:
            if(i==j):
                cont+=1
    print("El numero de vocales es: ",cont)

leer_frase()
contar_vocales()
